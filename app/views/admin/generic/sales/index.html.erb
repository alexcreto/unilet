<% content_for :head do -%>

<% end %>

<h1> Promoções </h1>

<div id="admin_sale_grid_wrapper" class='pretty_table'>
  <table>
    <tr class='odd'>

        <th  class='column1_header'><%= sortable 'product_id', 'Produto' %></th>
        <th>Porcentagem</th>
        <th>A partir de</th>
        <th>Válido até</th>
        <th></th>
        <th></th>
    </tr>
    <tbody>
    <% for sale in @sales %>
      <tr  class='<%= cycle("odd", "")%>'>

          <td><%= link_to sale.product_id, [:admin, :generic, sale] %></td>
          <td><%= sale.percent_off %></td>
          <td><%= sale.starts_at %></td>
          <td><%= sale.ends_at %></td>
        <td><%= link_to "editar", edit_admin_generic_sale_path(sale) %></td>
        <td><%= link_to "desativar", [:admin, :generic, sale], :data => { :confirm => 'Você tem certeza?' }, :method => :delete %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate @sales %>

<p><%= link_to "Criar nova promoção", new_admin_generic_sale_path, :class => 'button' %></p>
