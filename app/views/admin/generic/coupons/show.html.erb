
<h1> Cupom </h1>

<p>
  <strong>Código:</strong>
  <%= @coupon.code %>
</p>

<p>
  <strong>Valor:</strong>
  <%= @coupon.amount %>
</p>

<p>
  <strong>Valor mínimo:</strong>
  <%= @coupon.minimum_value %>
</p>

<p>
  <strong>Porcentagem:</strong>
  <%= @coupon.percent %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @coupon.description %>
</p>

<p>
  <strong>Juntar:</strong>
  <%= @coupon.combine.to_s %>
</p>

<p>
  <strong>A partir de:</strong>
  <%= @coupon.display_start_time %>
</p>

<p>
  <strong>Válido até:</strong>
  <%= @coupon.display_expires_time %>
</p>

<p>
  <%= link_to 'Editar', edit_admin_generic_coupon_path(@coupon), :class => 'button' %> |
  <%= link_to "Mostrar todos", admin_generic_coupons_path, :class => 'button' %>
</p>
