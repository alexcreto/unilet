<h3>Editar ofertas</h3>

<%= form_for @deal, :url => [:admin, :generic, @deal] do |f| %>
  <%=  render :partial => 'form', :locals => {:f => f} %>
  <div class="actions"><%= f.submit 'Atualizar' , :class => 'button' %></div>
<% end %>

<p>
  <%= link_to "Mostrar", [:admin, :generic, @deal], :class => 'button' %> |
  <%= link_to "Mostrar todos", admin_generic_deals_path, :class => 'button' %>
</p>
