<h3>Estoque para <%= @product.name %></h3>

<div class="admin_adjustments">
  <table>
    <thead>
      <tr>
        <th>SKU</th>
        <th>Estoque</th>
        <th>Pedidos por clientes</th>
        <th>Pedidos do fabricante</th>
        <th></th>
      </tr>
    </thead>
    <% @product.variants.each do |variant| %>
      <tr>
        <td><%= variant.sku %></td>
        <td><%= variant.inventory.count_on_hand %></td>
        <td><%= variant.inventory.count_pending_to_customer %></td>
        <td><%= variant.inventory.count_pending_from_supplier %></td>
        <td><%= link_to "Alterar", edit_admin_inventory_adjustment_path(variant) %></td>
      </tr>
    <% end %>
  </table>
</div>

<p>
  <%= link_to "Voltar para estoque", admin_inventory_adjustments_path, :class => 'button' %>
  <%= link_to "Voltar para o produto", admin_merchandise_product_path(@product), :class => 'button' %>
</p>