<% if @shipping_method.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@shipping_rate.errors.count, "erro não permitiu", "erros não permitiram") %> que essa categoria de envio fosse salva:</h2>

    <ul>
    <% @shipping_method.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<fieldset>
  <label>Nome</label>
  <%= f.text_field :name %>

  <label>Área de envio</label>
  <%= f.select :shipping_zone_id, @shipping_zones %>
</fieldset>

<%= f.submit "Criar", :class => "button" %>