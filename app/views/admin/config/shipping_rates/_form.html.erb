<% if @shipping_rate.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@shipping_rate.errors.count, "erro não permitiu", "erros não permitiram") %> que essa taxa de envio fosse salva:</h2>

    <ul>
    <% @shipping_rate.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<fieldset>
  <label>Método de envio</label>
  <%= f.select :shipping_method_id, @shipping_methods %>

  <label>Taxa</label>
  <%= f.text_field :rate %>

  <label>Taxa mínima</label>
  <%= f.text_field :minimum_charge %>

  <label>Tipo de taxa de envio</label>
  <%= f.select :shipping_rate_type_id, @shipping_rate_types %>

  <label>Categoria de envio</label>
  <%= f.select :shipping_category_id, @shipping_categories %>
</fieldset>

<%= f.submit "Criar", :class => "button" %>