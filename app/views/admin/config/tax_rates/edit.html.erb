<h3>Editar a taxa: (<%= @tax_rate.state.abbreviation %>)</h3>

<%= form_for(@tax_rate, :url => admin_config_tax_rate_path(@tax_rate)) do |f| %>
  <%= render :partial =>  'form', :locals => {:f => f} %>
<% end %>

<%= link_to 'Mostrar', admin_config_tax_rate_path(@tax_rate), :class => 'button' %>
<%= link_to 'Voltar', admin_config_tax_rates_path, :class => 'button' %>

<% content_for :bottom do -%>
  <%= javascript_include_tag "admin/config_tax_rate" %>

  <script>
    Hadean.Utility.registerOnLoadHandler(Hadean.TaxRateForm.initialize());
  </script>
<% end %>
