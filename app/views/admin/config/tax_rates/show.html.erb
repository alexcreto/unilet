<p>
  <b>Porcentagem:</b>
  <%= @tax_rate.percentage %>
</p>

<% if Settings.tax_per_state_id %>
  <p>
    <b>Estado:</b>
    <%= @tax_rate.state.name %>
  </p>
<% else %>
  <p>
    <b>País:</b>
    <%= @tax_rate.country.name %>
  </p>
<% end %>

<p>
  <b>Data de início:</b>
  <%= @tax_rate.start_date %>
</p>

<p>
  <b>Data de fim:</b>
  <%= @tax_rate.end_date %>
</p>

<p>
  <b>Ativo:</b>
  <%= @tax_rate.active %>
</p>


<%= link_to 'Editar', edit_admin_config_tax_rate_path(@tax_rate), :class => 'button' %>
<%= link_to 'Voltar', admin_config_tax_rates_path, :class => 'button' %>
