<div class="admin_title_header">
  <h3>Taxas de envio</h3>
  <%= link_to 'Criar nova taxa de envio', new_admin_config_tax_rate_path, :class => 'button' %>
</div>

<div class="admin_tax_rates">
  <table>
    <thead>
    <tr class='odd'>
      <th class='column1_header'>Porcentagem</th>
      <th>
        <% if Settings.tax_per_state_id %>
          Estado
        <% else %>
          País
        <% end %>
      </th>
      <th>Data de início</th>
      <th>Data de fim</th>
      <th>Ativo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

  <% @tax_rates.each do |tax_rate| %>
    <tr class='<%= cycle("odd", "")%>'>
      <td><%= tax_rate.percentage %></td>
      <% if Settings.tax_per_state_id %>
        <td><%= tax_rate.state.name %></td>
      <% else %>
        <td><%= tax_rate.country.name %></td>
      <% end %>
      <td><%= tax_rate.start_date %></td>
      <td><%= tax_rate.end_date %></td>
      <td><%= tax_rate.active.to_s %></td>
      <td><%= link_to 'Mostrar', admin_config_tax_rate_path(tax_rate) %></td>
      <td><%= link_to 'Editar', edit_admin_config_tax_rate_path(tax_rate) %></td>
      <td><%= link_to 'Deletar', admin_config_tax_rate_path(tax_rate), :confirm => 'Você tem certeza?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>
</div>