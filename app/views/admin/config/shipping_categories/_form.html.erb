<% if @shipping_category.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@shipping_category.errors.count, "erro não permitiu", "erros não permitiram") %> que admin_config_shipping_category fosse salvo:</h2>

    <ul>
    <% @shipping_category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

