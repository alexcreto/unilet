<% if @shipping_category.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@shipping_category.errors.count, "erro não permitiu", "erros não permitiram") %> que esta categoria de envio fosse salva:</h2>

    <ul>
    <% @shipping_category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

