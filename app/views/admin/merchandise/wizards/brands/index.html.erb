<%= render :partial => '/admin/merchandise/wizards/sub_header'%>
<% if  @brands.empty? %>
  <h3>Nova marca</h3>
<% else %>
  <h3>Escolha uma marca</h3>
<% end %>

<div id='shopping_addresses_selections' class='span-18 last'>
  <% @brands.each do |brand| %>
    <div class='span-8  box <%= cycle( '', 'last') %> <%= 'selected' if selected?(brand.id) %> '>
      <label><%= brand.name %></label><br/>
      <%= button_to 'Escolher', admin_merchandise_wizards_brand_path(brand), :class => "button spade inline-block", :method => :put %>
    </div>
  <% end %>
</div>

<hr/>

<% unless  @brands.empty? %>
  <h3>Criar uma nova marca</h3>
<% end %>
<%= form_for @brand, :url => admin_merchandise_wizards_brands_path do |brand_form| %>
  <%= render :partial =>  'form', :locals => {:f => brand_form}  %>
<% end %>