<%= render :partial => '/admin/merchandise/sub_header'%>

<h3>Adicionar imgem</h3>

<%= form_for @product, :url  => admin_merchandise_images_product_path(@product), :multipart => true do |form| %>
  <%= render :partial => '/admin/merchandise/images/products/form', :locals => {:form => form} %>
  <%= submit_tag "Criar", :class  => "button" %>
<% end %>

<%= link_to 'Mostrar imagens', admin_merchandise_images_product_path(@product), :class  => "button"%>
<%= link_to 'Detalhes do produto', admin_merchandise_product_path(@product), :class  => "button" %>