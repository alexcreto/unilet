
<% content_for :head do -%>
  <%= stylesheet_link_tag 'tables.css' %>
<% end %>

<div class='nine columns'>
  <h3> Pedido # <%= @order.number %> </h3>

  <div class='pretty_table ten'>
    <table style='margin: 0;'>
      <tbody>
        <tr>
          <td class='left-align'> Número: </td><td> <%= @order.number %> </td>
        </tr>
        <tr>
          <td class='left-align'> Feito em: </td><td> <%= @order.display_completed_at %> </td>
        </tr>
        <tr>
          <td class='left-align'> Endereço de entrega: </td>
          <td>
            <%= render :partial => '/shared/compact_address', :locals => {:shopping_address => @order.ship_address} if @order.ship_address_id%>
          </td>
        </tr>
        <tr>
          <td class='left-align'> Endereço de cobrança: </td>
          <td>
            <%= render :partial => '/shared/compact_address', :locals => {:shopping_address => @order.bill_address} if @order.bill_address_id %>
          </td>
        </tr>

        <tr>
          <td COLSPAN=2> Itens </td>
        </tr>
        <% @order.order_items.each do |item| %>
          <tr>
            <td class='left-align' COLSPAN=2> <%= item.variant.product_name %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>